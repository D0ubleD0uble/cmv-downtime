<form>
    <p>
        {{#each downtime}}
    <h1>Downtime Action</h1>
    <select name="{{id}}.category">
        <option value="Carousing - Normal"></option>
        <option value="Carousing - Classy"></option>
        <option value="Crafting"></option>
        <option value="Diplomacy - Face to Face"></option>
        <option value="Diplomacy - Letters"></option>
        <option value="Diplomacy - Representative"></option>
        <option value="Hiring"></option>
        <option value="Meditation - Focus Points"></option>
        <option value="Meditation - Focus Spells"></option>
        <option value="Natural Acquisitions - Fishing"></option>
        <option value="Natural Acquisitions - Foraging"></option>
        <option value="Natural Acquisitions - Hunting"></option>
        <option value="Research - Ask Around"></option>
        <option value="Research - Divination"></option>
        <option value="Research - Hit the Books"></option>
        <option value="Research - Seek Within"></option>
        <option value="Taming"></option>
    </select>
    <label name="{{id}}.status">{{status}}</label>
    <input type="text" value="{{character}}" name="{{id}}.character" data-dtype="String" />
    <input type="text" value="{{description}}" name="{{id}}.description" data-dtype="String" />
    <input type="text" value="{{location}}" name="{{id}}.location" data-dtype="String" />
    <input type="text" value="{{costs}}" name="{{id}}.costs" data-dtype="String" />
    <input type="text" value="{{contingencies}}" name="{{id}}.contingencies" data-dtype="String" />
    <input type="text" value="{{rolls}}" name="{{id}}.rolls" data-dtype="String" />
    {{/each}}
    </p>
    <button type="button" data-action="submit"><i class="fas fa-plus"></i>"{{localize
        "CMV-Downtime.submit"}}"</button>
    <button type="button" data-action="close"><i class="fas fa-minus"></i>"{{localize
        "CMV-Downtime.close"}}"</button>
</form>